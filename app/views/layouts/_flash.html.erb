
<div class="col-md-6 col-md-offset-2 alert-messages">
	<% flash.each do |type, message| %>
  		<div id="flash" class="alert <%= bootstrap_class_for(type) %> fade in">
    	<button class="close" data-dismiss="alert">Ã—</button>
    	<%= message %>
  		</div>
  	<% flash.clear %>
	<% end %>
	<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

</div>
